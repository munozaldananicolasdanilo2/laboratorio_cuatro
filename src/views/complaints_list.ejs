        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script>
        // Función para manejar el dropdown
        function toggleDropdown(button) {
            const dropdown = button.nextElementSibling;
            const isOpen = dropdown.classList.contains('show');
            
            // Cerrar todos los dropdowns abiertos
            document.querySelectorAll('.dropdown-menu-custom.show').forEach(menu => {
                menu.classList.remove('show');
            });
            
            // Si no estaba abierto, abrirlo
            if (!isOpen) {
                dropdown.classList.add('show');
            }
        }

        // Cerrar dropdown al hacer click fuera
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.action-dropdown')) {
                document.querySelectorAll('.dropdown-menu-custom.show').forEach(menu => {
                    menu.classList.remove('show');
                });
            }
        });

        document.addEventListener('click', function(e) {
            if (e.target.closest('.dropdown-item-custom')) {
                const dropdown = e.target.closest('.dropdown-menu-custom');
                if (dropdown) {
                    dropdown.classList.remove('show');
                }
            }
        });

        // Modal y lógica de comentarios
        let commentsModal = new bootstrap.Modal(document.getElementById('commentsModal'));
        let commentForm = document.getElementById('commentForm');
        let commentError = document.getElementById('comment-error');
        let commentIdInput = document.getElementById('comment-complaint-id');

        // Función para validar sesión del usuario
        async function validateUserSession() {
            try {
                const username = localStorage.getItem('username');
                if (!username) return false;
                
                const response = await fetch(`/auth/validate?username=${username}`);
                const data = await response.json();
                return data.success && data.data?.isActive === true;
            } catch (error) {
                console.error('Error validando sesión:', error);
                return false;
            }
        }

        // Función para redirigir al login
        function redirectToLogin(message) {
            Swal.fire({
                icon: 'warning',
                title: 'Sesión inactiva',
                text: message || 'Por favor, inicie sesión para continuar',
                confirmButtonColor: '#2296c7',
                confirmButtonText: 'Ir al Login',
                allowOutsideClick: false,
                allowEscapeKey: false,
                showCancelButton: true,
                cancelButtonText: 'Cancelar',
                cancelButtonColor: '#6c757d'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Guardar la URL actual antes de redirigir
                    localStorage.setItem('redirectAfterLogin', window.location.pathname);
                    window.location.href = '/login';
                }
                // Si cancela, no hace nada y permanece en la página
            });
        }

        document.addEventListener('click', function(e) {
            // Manejar click en botón de borrar
            if (e.target.closest('.delete-btn')) {
                const btn = e.target.closest('.delete-btn');
                const complaintId = btn.getAttribute('data-id');
                const entity = btn.getAttribute('data-entity');
                
                handleDeleteComplaint(complaintId, entity);
            }

            // Manejar click en botón de cambiar estado
            if (e.target.closest('.change-status-btn')) {
                const btn = e.target.closest('.change-status-btn');
                const complaintId = btn.getAttribute('data-id');
                const entity = btn.getAttribute('data-entity');
                const currentStatus = btn.getAttribute('data-current-status');
                
                handleChangeStatus(complaintId, entity, currentStatus);
            }

            // Manejar click en botón de ver comentarios
            if (e.target.closest('.view-comments-btn')) {
                const btn = e.target.closest('.view-comments-btn');
                const complaintId = btn.getAttribute('data-id');
                const entity = btn.getAttribute('data-entity');
                
                commentIdInput.value = complaintId;
                document.getElementById('modal-entity').textContent = entity;
                commentError.style.display = 'none';
                commentForm.reset();
                commentIdInput.value = complaintId;
                
                loadComplaintDetails(complaintId);
                commentsModal.show();
            }
        });

        // Función para manejar eliminación de queja
        async function handleDeleteComplaint(complaintId, entity) {
            // Validar sesión primero
            const isSessionActive = await validateUserSession();
            
            if (!isSessionActive) {
                redirectToLogin('Debe iniciar sesión para eliminar quejas');
                return;
            }

            // Si la sesión está activa, pedir confirmación
            Swal.fire({
                title: '¿Está seguro?',
                text: `¿Desea eliminar la queja de ${entity}?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar'
            }).then(async (result) => {
                if (result.isConfirmed) {
                    try {
                        const username = localStorage.getItem('username');
                        console.log('Username para delete:', username);
                        if (!username) {
                            console.error('No se encontró username en localStorage para delete');
                            throw new Error('No hay sesión activa');
                        }
                        
                        const response = await fetch('/complaints/delete', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ 
                                id_complaint: complaintId,
                                username: username
                            })
                        });
                        
                        const data = await response.json();
                        
                        if (data.redirectToLogin) {
                            redirectToLogin(data.message);
                            return;
                        }
                        
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Queja eliminada',
                                text: 'La queja fue eliminada correctamente',
                                confirmButtonColor: '#2296c7'
                            }).then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: data.message || 'Error al eliminar la queja',
                                confirmButtonColor: '#2296c7'
                            });
                        }
                    } catch (error) {
                        console.error('Error:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Error al eliminar la queja. Intente nuevamente.',
                            confirmButtonColor: '#2296c7'
                        });
                    }
                }
            });
        }

        // Función para manejar cambio de estado
        async function handleChangeStatus(complaintId, entity, currentStatus) {
            // Validar sesión primero
            const isSessionActive = await validateUserSession();
            
            if (!isSessionActive) {
                redirectToLogin('Debe iniciar sesión para cambiar el estado de quejas');
                return;
            }

            // Si la sesión está activa, pedir nuevo estado
            const statusOptions = {
                'abierta': 'Abierta',
                'en_revision': 'En Revisión',
                'cerrada': 'Cerrada'
            };

            const { value: newStatus } = await Swal.fire({
                title: 'Cambiar Estado',
                text: `Queja de ${entity}`,
                input: 'select',
                inputOptions: statusOptions,
                inputPlaceholder: 'Seleccione el nuevo estado',
                showCancelButton: true,
                confirmButtonColor: '#2296c7',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Cambiar',
                cancelButtonText: 'Cancelar',
                inputValidator: (value) => {
                    if (!value) {
                        return 'Debe seleccionar un estado';
                    }
                }
            });

            if (newStatus) {
                try {
                    const username = localStorage.getItem('username');
                    console.log('Username para update:', username);
                    if (!username) {
                        console.error('No se encontró username en localStorage para update');
                        throw new Error('No hay sesión activa');
                    }
                    
                    const response = await fetch('/complaints/update-status', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ 
                            id_complaint: complaintId, 
                            complaint_status: newStatus,
                            username: username
                        })
                    });
                    
                    const data = await response.json();
                    
                    if (data.redirectToLogin) {
                        redirectToLogin(data.message);
                        return;
                    }
                    
                    if (data.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Estado actualizado',
                            text: `El estado se cambió a: ${statusOptions[newStatus]}`,
                            confirmButtonColor: '#2296c7'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message || 'Error al cambiar el estado',
                            confirmButtonColor: '#2296c7'
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error al cambiar el estado. Intente nuevamente.',
                        confirmButtonColor: '#2296c7'
                    });
                }
            }
        }

        // --- CAPTCHA LOCALSTORAGE ---
        const CAPTCHA_KEY = 'captcha_token';
        const CAPTCHA_TIME_KEY = 'captcha_token_time';
        const CAPTCHA_EXPIRATION_MINUTES = 30;

        function isCaptchaValid() {
            const token = localStorage.getItem(CAPTCHA_KEY);
            const time = localStorage.getItem(CAPTCHA_TIME_KEY);
            if (!token || !time) return false;
            const now = Date.now();
            const diff = (now - parseInt(time, 10)) / 1000 / 60;
            return diff < CAPTCHA_EXPIRATION_MINUTES;
        }

        function showComplaintsList() {
            document.querySelector('.captcha-container').style.display = 'none';
            document.getElementById('complaints-container').style.display = 'block';
            if ($('.custom_table').length && !$.fn.DataTable.isDataTable('.custom_table')) {
                const table = $('.custom_table').DataTable({
                    paging: true,
                    pageLength: 5,
                    lengthChange: false,
                    searching: true,
                    info: false,
                    ordering: false,
                    responsive: true,
                    dom: 'rtip'
                });
                
                // Poblar el filtro de entidades
                populateEntityFilter(table);
                
                // Agregar evento de filtrado
                $('#entityFilter').on('change', function() {
                    const selectedEntity = $(this).val();
                    if (selectedEntity === '') {
                        // Mostrar todas las entidades
                        table.search('').columns().search('').draw();
                    } else {
                        // Filtrar por la entidad exacta seleccionada usando expresión regular
                        table.column(0).search('^' + selectedEntity + '$', true, false).draw();
                    }
                });
            }
        }

        function populateEntityFilter(table) {
            const entities = new Set();
            
            // Obtener todas las entidades directamente del tbody
            $('.custom_table tbody tr').each(function() {
                const entityText = $(this).find('td').first().text().trim();
                if (entityText) {
                    entities.add(entityText);
                }
            });
            
            // Ordenar entidades alfabéticamente
            const sortedEntities = Array.from(entities).sort();
            const select = $('#entityFilter');
            
            // Limpiar opciones existentes excepto la primera
            select.find('option:not(:first)').remove();
            
            // Agregar cada entidad como opción
            sortedEntities.forEach(function(entity) {
                select.append($('<option>', {
                    value: entity,
                    text: entity
                }));
            });
        }
        // Función para cargar detalles de la queja y comentarios
        function loadComplaintDetails(complaintId) {
            const commentsList = document.getElementById('comments-list');
            commentsList.innerHTML = `
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                </div>
            `;

            fetch(`/complaints/${complaintId}/details`)
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        // Actualizar información de la queja
                        document.getElementById('modal-description').textContent = data.complaint.description;
                        
                        // Mostrar comentarios
                        displayComments(data.comments);
                    } else {
                        commentsList.innerHTML = `
                            <div class="alert alert-danger">
                                Error al cargar los detalles: ${data.message}
                            </div>
                        `;
                    }
                })
                .catch(err => {
                    console.error('Error:', err);
                    commentsList.innerHTML = `
                        <div class="alert alert-danger">
                            Error al cargar los comentarios. Por favor, intenta de nuevo.
                        </div>
                    `;
                });
        }

        // Función para mostrar comentarios
        function displayComments(comments) {
            const commentsList = document.getElementById('comments-list');
            
            if (comments.length === 0) {
                commentsList.innerHTML = `
                    <div class="text-center text-muted">
                        <i class="bi bi-chat"></i>
                        <p class="mt-2">No hay comentarios aún. ¡Sé el primero en comentar!</p>
                    </div>
                `;
                return;
            }

            const commentsHtml = comments.map(comment => {
                const date = new Date(comment.created_at);
                const formattedDate = date.toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                });

                return `
                    <div class="comment-item border-bottom pb-3 mb-3">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="badge bg-secondary">Anónimo</span>
                            <small class="text-muted">${formattedDate}</small>
                        </div>
                        <p class="mb-0">${comment.comment_text}</p>
                    </div>
                `;
            }).join('');

            commentsList.innerHTML = commentsHtml;
        }

        // Manejar envío de comentario
        commentForm.addEventListener('submit', function(e) {
            e.preventDefault();
            const complaintId = commentIdInput.value;
            const commentText = document.getElementById('comment-text').value;
            
            if (commentText.trim().length < 10) {
                commentError.textContent = 'El comentario debe tener al menos 10 caracteres';
                commentError.style.display = 'block';
                return;
            }

            fetch('/complaints/comments', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ 
                    id_complaint: complaintId, 
                    comment_text: commentText.trim()
                })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    commentError.style.display = 'none';
                    document.getElementById('comment-text').value = '';
                    
                    Swal.fire({
                        icon: 'success',
                        title: 'Comentario agregado',
                        text: 'Tu comentario anónimo ha sido agregado exitosamente',
                        confirmButtonColor: '#2296c7',
                        timer: 2000
                    });
                    
                    // Recargar comentarios
                    loadComplaintDetails(complaintId);
                } else {
                    commentError.textContent = data.message || 'Error al agregar el comentario';
                    commentError.style.display = 'block';
                }
            })
            .catch(err => {
                console.error('Error:', err);
                commentError.textContent = 'Error al agregar el comentario. Por favor, intenta de nuevo.';
                commentError.style.display = 'block';
            });
        });
        function onCaptchaSuccess(token) {
            fetch('/verify-captcha', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ token: token })
            })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        localStorage.setItem(CAPTCHA_KEY, token);
                        localStorage.setItem(CAPTCHA_TIME_KEY, Date.now().toString());
                        showComplaintsList();
                    } else {
                        alert('Verificación fallida. Por favor, intenta de nuevo.');
                        grecaptcha.reset();
                    }
                })
                .catch(err => {
                    console.error('Error:', err);
                    alert('Error al verificar. Por favor, intenta de nuevo.');
                    grecaptcha.reset();
                });
        }

        window.addEventListener('DOMContentLoaded', function() {
            if (isCaptchaValid()) {
                showComplaintsList();
            }
        });

        // Ajustar el reCAPTCHA al tamaño de pantalla
        function adjustRecaptcha() {
            if (window.innerWidth <= 768) {
                document.querySelector('.g-recaptcha').style.transform = 'scale(0.85)';
            } else {
                document.querySelector('.g-recaptcha').style.transform = 'scale(1)';
            }
        }

        window.addEventListener('resize', adjustRecaptcha);
        window.addEventListener('load', adjustRecaptcha);

        // Función para verificar la sesión sin usar localStorage directamente
        async function verifySession() {
            const username = localStorage.getItem('username');
            
            if (!username) {
                showNoSessionMessage();
                return false;
            }

            try {
                const response = await fetch(`/auth/validate?username=${encodeURIComponent(username)}`);
                const data = await response.json();

                if (data.success && data.data?.isActive === true) {
                    showMainContent();
                    return true;
                } else {
                    localStorage.removeItem('username');
                    showNoSessionMessage();
                    return false;
                }
            } catch (error) {
                console.error('Error al verificar la sesión:', error);
                showNoSessionMessage();
                return false;
            }
        }

        function showNoSessionMessage() {
            document.getElementById('no-session-container').style.display = 'block';
            document.getElementById('main-content-container').style.display = 'none';
        }

        function showMainContent() {
            document.getElementById('no-session-container').style.display = 'none';
            document.getElementById('main-content-container').style.display = 'block';
        }

        // Manejar logout y login
        document.addEventListener('DOMContentLoaded', async function() {
            // Verificar la sesión al cargar la página
            const hasSession = await verifySession();
            
            if (!hasSession) {
                return; // No continuar si no hay sesión
            }

            const username = localStorage.getItem('username');
            const logoutSection = document.getElementById('logoutSection');
            const loginBtn = document.getElementById('loginBtn');
            const usernameDisplay = document.getElementById('usernameDisplay');
            const logoutBtn = document.getElementById('logoutBtn');

            if (username) {
                usernameDisplay.textContent = `Usuario: ${username}`;
                logoutSection.classList.remove('d-none');
                logoutSection.classList.add('d-flex');
                loginBtn.classList.add('d-none');
            } else {
                loginBtn.classList.remove('d-none');
                logoutSection.classList.add('d-none');
            }

            logoutBtn?.addEventListener('click', async function() {
                try {
                    const response = await fetch('/auth/logout', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ username })
                    });

                    const data = await response.json();

                    if (data.success) {
                        localStorage.removeItem('username');
                        Swal.fire({
                            icon: 'success',
                            title: 'Sesión cerrada',
                            text: data.message,
                            confirmButtonColor: '#2296c7',
                            timer: 1500,
                            showConfirmButton: false
                        }).then(() => {
                            window.location.reload();
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: data.message,
                            confirmButtonColor: '#2296c7'
                        });
                    }
                } catch (error) {
                    console.error('Error:', error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Error al cerrar sesión',
                        confirmButtonColor: '#2296c7'
                    });
                }
            });
        });
    </script>
